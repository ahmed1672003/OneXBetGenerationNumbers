@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item navbar-li">
        <a  class="nav-link btn btn-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        Hello @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item navbar-li">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link btn-danger w-100">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item navbar-li" style="">
        <a class="nav-link btn btn-success" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item navbar-li">
        <a class="nav-link btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
